<div{{ attributes}}>

  <div class="cart-block-summary">
    <div class="cart-block-summary--text">
      <a class="cart-link" href="{{ url }}">
        <span class="cart-link__caption">Mi lista de art√≠culos</span>
        <span class="cart-block--summary__icon"><i class="fas fa-shopping-cart"></i></span>
      </a>
    </div> <!-- icontext.// -->
    {% if count > 0 %}
    <div class="cart-block-summary--count">
      <a href="{{ url }}">
        <span class="notify">{{ count }}</span>
      </a>
    </div>
    {% endif %}
  </div>
  {% if content %}
  <div class="cart-block--contents">
    <div class="cart-block--contents__inner">
      <div class="cart-block--contents__items">
        {{ content }}
      </div>
      <div class="cart-block--contents__links">
        {{ links }}
      </div>
    </div>
  </div>
  {% endif %}
</div>

